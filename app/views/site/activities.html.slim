.page-header
  h1 Activities

ul.activities 
  - @activities.each do |activity|
    li.list-unstyled
      small.text-muted 
        span.glyphicon.glyphicon-time aria-hidden="true"
        = activity.created_at
      br
      strong
        = "#{activity.owner.username} "
      | edited page 
      - if activity.trackable.present?
        = link_to activity.trackable.title, activity.trackable
      - else
        span.text-muted (deleted page)
