.page-header
  h1 Settings

= form_for @setting, url: site_update_settings_path, method: :put do |f|
  .form-group
    = label_tag 'Site Title'
    = f.text_field :site_title, class: 'form-control'
  .form-group
    = label_tag 'List size of Recent words'
    = f.text_field :list_size_of_recent_words_parts, class: 'form-control', placeholder: 'Set to 0 to hide entire section'
  .form-group
    = label_tag 'Theme'
    = f.text_field :theme, class: 'form-control'

  .form-group
    = label_tag 'HTML for head tag'
    = f.text_area :html_append_head, class: 'form-control'

  .form-group
    = label_tag 'HTML for end of body tag'
    = f.text_area :html_append_body, class: 'form-control'

  = f.submit :update, class: 'btn btn-default'

h2 Export

= link_to 'Export', site_export_path(format: :zip), class: 'btn btn-default'

h2 Import

= form_tag site_import_path, { multipart: true } do |f|
  .form-group
    = file_field_tag 'archive'
  = submit_tag 'Import', class: 'btn btn-default' 
