# Railway PostgreSQL Configuration
# Copy this to .env.production and fill in your Railway PostgreSQL credentials

# Rails Environment
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Database Configuration (provided by Railway)
DATABASE_URL=postgresql://username:password@host:port/database
PGHOST=your-railway-host
PGPORT=5432
PGDATABASE=railway
PGUSER=postgres
PGPASSWORD=your-password

# Rails Secret Key (generate with: rails secret)
RAILS_MASTER_KEY=your-master-key

# Optional: Cloudinary for image uploads
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Optional: Job concurrency
JOB_CONCURRENCY=2

# Optional: Rails threads
RAILS_MAX_THREADS=5